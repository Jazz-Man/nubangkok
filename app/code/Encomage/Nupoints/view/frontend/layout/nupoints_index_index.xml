<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <update handle="customer_account"/>
    <body>
        <referenceContainer name="content">
            <block class="Encomage\Nupoints\Block\Customer\Nupoints"
                   name="customer.nupoints"
                   template="Encomage_Nupoints::customer/nupoints.phtml">
                <block class="Magento\Cms\Block\Block" name="block_reward_point_details">
                    <arguments>
                        <argument name="block_id" xsi:type="string">reward_point_details</argument>
                    </arguments>
                </block>
            </block>
        </referenceContainer>
    </body>
</page>
