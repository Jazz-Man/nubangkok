    <?php if($block->isShippingTypeRender() && !$block->getAddress()->getId()):?>
        <div class="checkbox-block">
            <div class="field choice">
                <label for="use_default_address" class="label">
                    <input type="checkbox" id="use_default_address" name="use_default_address" value="1" class="checkbox">
                    <span></span><span><?= $block->escapeHtml(__('Same as default address')) ?></span>
                </label>
            </div>
        </div>
        <div class="or">
            <span><?= __('or'); ?></span>
        </div>

    <?php endif; ?>


    <?php if (!$block->getAddress()->getId()): ?>
        <div class="legend legend-contact-info">
            <span><?= $block->escapeHtml(__('Add another shipping information')) ?></span>
        </div>
    <?php endif; ?>

    <fieldset class="fieldset">
        <?= $block->getBlockHtml('formkey') ?>
        <input type="hidden" name="success_url" value="<?= $block->escapeUrl($block->getSuccessUrl()) ?>">
        <input type="hidden" name="error_url" value="<?= $block->escapeUrl($block->getErrorUrl()) ?>">
        <input type="hidden" name="firstname"
               value="<?= $block->getCustomer()->getFirstname(); ?>">
        <input type="hidden" name="lastname"
               value="<?= $block->getCustomer()->getLastname(); ?>">
        <input type="hidden" name="telephone"
               value="<?= $block->getAddress()->getTelephone(); ?>">
        <div class="field country required">
            <label class="label" for="country"><span><?= $block->escapeHtml(__('Country')) ?></span></label>
            <div class="control">
                <?= $block->getCountryHtmlSelect() ?>
            </div>
        </div>
        <?php $_streetValidationClass = $this->helper('Magento\Customer\Helper\Address')->getAttributeValidationClass('street'); ?>
        <div class="field street required">
            <div class="control">
                <input type="text"
                       name="street[]"
                       value="<?= $block->escapeHtmlAttr($block->getStreetLine(1)) ?>"
                       title="<?= $block->escapeHtmlAttr(__('Street Address')) ?>"
                       id="street_1-<?= $block->getAddressType();?>"
                       class="input-text <?= $block->escapeHtmlAttr($_streetValidationClass) ?>"
                       placeholder="<?= __('Street Address'); ?>"/>
