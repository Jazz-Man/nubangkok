/** @var \Encomage\Customer\Block\Address\Edit $block */
?>
<form class="form-address-edit"
      action="<?= $block->escapeUrl($block->getSaveUrl()) ?>"
      method="post"
      id="form-validate-<?= $block->getAddressId(); ?>"
      enctype="multipart/form-data"
      data-hasrequired="<?= $block->escapeHtmlAttr(__('* Required Fields')) ?>"
      data-mage-init='{"addressValidation": {}}'>


    <input type="hidden"
           name="<?= ($block->isShippingTypeRender()) ? 'default_shipping' : 'default_billing' ?>"
